# MTQuant Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# BROKER CREDENTIALS (MT5)
# =============================================================================

# MT5 Demo Account (for testing)
MT5_DEMO_ACCOUNT=YOUR_ACCOUNT_NUMBER
MT5_DEMO_PASSWORD=YOUR_PASSWORD
MT5_DEMO_SERVER=YOUR_SERVER_NAME

# MT5 Live Account (for production trading)
MT5_LIVE_ACCOUNT=YOUR_LIVE_ACCOUNT
MT5_LIVE_PASSWORD=YOUR_LIVE_PASSWORD
MT5_LIVE_SERVER=YOUR_LIVE_SERVER

# =============================================================================
# BROKER CREDENTIALS (MT4)
# =============================================================================

# MT4 Demo Account (for testing)
MT4_DEMO_ACCOUNT=YOUR_ACCOUNT_NUMBER
MT4_DEMO_PASSWORD=YOUR_PASSWORD
MT4_DEMO_SERVER=YOUR_SERVER_NAME

# =============================================================================
# DATABASE - POSTGRESQL
# =============================================================================

# PostgreSQL Configuration (Transactional data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mtquant
POSTGRES_USER=mtquant_user
POSTGRES_PASSWORD=YOUR_DB_PASSWORD

# =============================================================================
# DATABASE - QUESTDB
# =============================================================================

# QuestDB Configuration (Time-series data)
QUESTDB_HOST=localhost
QUESTDB_HTTP_PORT=9000
QUESTDB_PG_PORT=8812
QUESTDB_PASSWORD=YOUR_QUESTDB_PASSWORD

# =============================================================================
# DATABASE - REDIS
# =============================================================================

# Redis Configuration (Hot data cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_DB=0

# =============================================================================
# API CONFIGURATION
# =============================================================================

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=YOUR_SECRET_KEY_HERE_GENERATE_SECURE_ONE

# Security Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/mtquant.log

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment Type
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Alpha Vantage API (Market Data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# News API (Sentiment Analysis)
NEWS_API_KEY=your_news_api_key_here

# Discord Webhook (Alerts)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# =============================================================================
# EMAIL CONFIGURATION (ALERTS)
# =============================================================================

# SMTP Configuration for alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=your_email@gmail.com
SMTP_TO=alerts@mtquant.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
PYTHONPATH=.
PYTHONUNBUFFERED=1
DEBUG=true
TESTING=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Compose
COMPOSE_PROJECT_NAME=mtquant
COMPOSE_FILE=docker-compose.yml

# Container Names
BACKEND_CONTAINER=mtquant-backend
FRONTEND_CONTAINER=mtquant-frontend
QUESTDB_CONTAINER=mtquant-questdb
POSTGRES_CONTAINER=mtquant-postgres
REDIS_CONTAINER=mtquant-redis

# =============================================================================
# SECURITY NOTES
# =============================================================================

# IMPORTANT: Generate a secure API_SECRET_KEY
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Or use: openssl rand -hex 32

# NEVER commit the actual .env file to version control
# Always use .env.example as a template

# For production environments:
# - Use strong, unique passwords
# - Enable SSL/TLS for all connections
# - Use environment-specific configurations
# - Regularly rotate API keys and passwords

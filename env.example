# MTQuant Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# BROKER CONFIGURATION
# =============================================================================

# MetaTrader 5 Configuration
MT5_ACCOUNT=12345678
MT5_PASSWORD=your_password_here
MT5_SERVER=ICMarkets-Demo
MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe

# OANDA Configuration (Alternative)
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_ENVIRONMENT=practice  # or 'live' for real trading

# Interactive Brokers Configuration (Alternative)
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# QuestDB (Time-series data)
QUESTDB_HOST=localhost
QUESTDB_PORT=9000
QUESTDB_USER=admin
QUESTDB_PASSWORD=quest

# PostgreSQL (Transactional data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mtquant
POSTGRES_USER=mtquant
POSTGRES_PASSWORD=mtquant_password

# Redis (Hot data cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# =============================================================================
# API CONFIGURATION
# =============================================================================

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Risk Management
MAX_POSITION_SIZE_PCT=0.10  # 10% of portfolio per position
MAX_DAILY_LOSS_PCT=0.05      # 5% daily loss limit
MAX_PORTFOLIO_EXPOSURE=1.20  # 120% gross exposure
CIRCUIT_BREAKER_LEVEL_1=0.05 # 5% loss warning
CIRCUIT_BREAKER_LEVEL_2=0.10 # 10% loss reduction
CIRCUIT_BREAKER_LEVEL_3=0.15 # 15% loss halt

# Position Sizing
POSITION_SIZING_METHOD=kelly  # kelly, fixed, volatility
FIXED_POSITION_SIZE_PCT=0.02  # 2% for fixed method
KELLY_FRACTION=0.25           # Fractional Kelly (25%)

# Transaction Costs
SPREAD_COST_PCT=0.0003        # 0.03% spread cost
COMMISSION_COST_PCT=0.0001    # 0.01% commission
SLIPPAGE_COST_PCT=0.0001      # 0.01% slippage

# =============================================================================
# RL AGENT CONFIGURATION
# =============================================================================

# Training Parameters
RL_EPISODES=1000
RL_LEARNING_RATE=0.0003
RL_BATCH_SIZE=64
RL_BUFFER_SIZE=100000
RL_GAMMA=0.99
RL_TAU=0.005

# Model Configuration
MODEL_CHECKPOINT_DIR=./models/checkpoints
MODEL_LOG_DIR=./models/logs
MODEL_SAVE_FREQUENCY=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text
LOG_FILE=./logs/mtquant.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health Checks
HEALTH_CHECK_INTERVAL=30  # seconds
HEALTH_CHECK_TIMEOUT=5   # seconds

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development  # development, testing, production
DEBUG=true
TESTING=false

# Development Tools
PYTHONPATH=.
PYTHONUNBUFFERED=1

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Alpha Vantage API (Market Data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# News API (Sentiment Analysis)
NEWS_API_KEY=your_news_api_key_here

# Discord Webhook (Alerts)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Email Configuration (Alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=your_email@gmail.com
SMTP_TO=alerts@mtquant.com

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Compose
COMPOSE_PROJECT_NAME=mtquant
COMPOSE_FILE=docker-compose.yml

# Container Names
BACKEND_CONTAINER=mtquant-backend
FRONTEND_CONTAINER=mtquant-frontend
QUESTDB_CONTAINER=mtquant-questdb
POSTGRES_CONTAINER=mtquant-postgres
REDIS_CONTAINER=mtquant-redis
